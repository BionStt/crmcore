<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>CRM Core - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/styles/vendors/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/styles/vendors/simple-line-icons.css"/>
    <link rel="stylesheet" href="~/styles/style.css"/>
    <link rel="stylesheet" href="~/packages/CRMCore.Theme/css/site.css"/>

    <script asp-src="CRMCore.Theme/Content/js/vendors/jquery/dist/jquery.min.js"></script>
</head>
<body class="app flex-row align-items-center">
<div class="container body-content">
    @RenderBody()
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
        asp-fallback-src="~/packages/CRMCore.Theme/js/vendors/jquery/dist/jquery.min.js"
        asp-fallback-test="window.jQuery && window.jQuery.validator">
</script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"
        asp-fallback-src="~/packages/CRMCore.Theme/js/vendors/jquery-validation/dist/jquery.validate.min.js"
        asp-fallback-test="window.jQuery && window.jQuery.validator">
</script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"
        asp-fallback-src="~/packages/CRMCore.Theme/js/vendors/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
        asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
</script>

<script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
        asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
        asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
</script>

@RenderSection("scripts", required: false)
</body>
</html>